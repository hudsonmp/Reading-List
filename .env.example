# App Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key

# Firebase Configuration (Client)
NEXT_PUBLIC_FIREBASE_API_KEY=replace_with_your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=replace_with_your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=replace_with_your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=replace_with_your_measurement_id

# Google OAuth (Server-side)
GOOGLE_CLIENT_ID=replace_with_your_google_client_id
GOOGLE_CLIENT_SECRET=replace_with_your_google_client_secret

# Google Custom Search API (Client-side)
NEXT_PUBLIC_GOOGLE_API_KEY=your-google-api-key
NEXT_PUBLIC_GOOGLE_SEARCH_ENGINE_ID=your-search-engine-id

# Anthropic API (Server-side)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Note: Copy this file to .env.local and replace the placeholder values with your actual API keys
# Never commit your actual API keys to version control! 